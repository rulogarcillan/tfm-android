<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="appcolor_cursor">
        <item name="colorControlActivated">@color/secondaryColor</item>
    </style>

    <style name="edittext" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="fontFamily">?attr/fontTypeRegular</item>
    </style>

    <style name="edittext_grey" parent="edittext">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textColorHint">@color/warmGrey</item>
    </style>

    <style name="edittext_white" parent="edittext">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/warmGrey</item>
    </style>

</resources>