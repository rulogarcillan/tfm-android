<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">@dimen/globalButtonHeigth</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/globalButtonCornes</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="main_button" parent="button">
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="main_button_secondary_color" parent="main_button">
        <item name="backgroundTint">@color/secondaryColor</item>
    </style>

</resources>