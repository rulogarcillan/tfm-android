<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">@dimen/globalButtonHeigth</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/globalButtonCornes</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="elevation">1dp</item>
    </style>

    <style name="main_button" parent="button">
        <item name="android:layout_margin">20dp</item>
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="text_link_button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:letterSpacing">0.0</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="rippleColor">@color/neutralGrey</item>
        <item name="fontFamily">?attr/fontTypeRegular</item>
        <item name="android:fontFamily">?attr/fontTypeRegular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator" tools:targetApi="21">@null</item>
    </style>

    <style name="text_link_button_bold" parent="text_link_button">
        <item name="fontFamily">?attr/fontTypeBold</item>
        <item name="android:fontFamily">?attr/fontTypeBold</item>
    </style>

    <style name="text_link_button_medium" parent="text_link_button">
        <item name="fontFamily">?attr/fontTypeMedium</item>
        <item name="android:fontFamily">?attr/fontTypeMedium</item>
    </style>


</resources>